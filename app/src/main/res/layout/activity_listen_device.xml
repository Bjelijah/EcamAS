    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listen_device_form"
        android:paddingTop="@dimen/add_listen_device_padding_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/add_listen_device_padding_horizontal"
        android:paddingRight="@dimen/add_listen_device_padding_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_listen_device_name_title"
                android:textSize="20sp"
                android:textColor="@color/white"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="@dimen/add_listen_device_width"
                android:layout_height="wrap_content"

                app:hintTextAppearance="@style/FloatingStyle"
                app:errorTextAppearance="@style/errorStyle"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_fun"
                >

                <AutoCompleteTextView

                    android:id="@+id/add_listen_et_deviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_listen_device_name"

                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                   />

            </android.support.design.widget.TextInputLayout>







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/add_listen_device_wifi_title"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_ctrl"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_fun"
                >

                <Spinner
                    android:id="@+id/add_listen_spinner_wifi"
                    android:layout_width="@dimen/add_listen_device_spinner_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:layout_alignParentLeft="true"
                    >
                </Spinner>


                <LinearLayout
                    android:id="@+id/add_listen_ll_wifi_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="10sp"
                        android:text="@string/add_listen_device_wifi_tip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"

                        />

                    <ImageView
                        android:id="@+id/add_listen_iv_wifi_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>




            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_listen_device_password_title"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_ctrl"
                />




            <android.support.design.widget.TextInputLayout
                android:layout_width="@dimen/add_listen_device_width"
                android:layout_height="wrap_content"

                app:hintTextAppearance="@style/FloatingStyle"
                app:errorTextAppearance="@style/errorStyle"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_fun"
                >

                <AutoCompleteTextView

                    android:id="@+id/add_listen_et_wifiPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_listen_device_password"

                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />

            </android.support.design.widget.TextInputLayout>



            <Button
                android:id="@+id/add_listen_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_listen_device_next"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/wifi_ll"
                android:layout_marginTop="@dimen/add_listen_device_margin_vertcail_ctrl"
                />


        </LinearLayout>


    </ScrollView>



</LinearLayout>
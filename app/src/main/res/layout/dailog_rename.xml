<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:hintTextAppearance="@style/FloatingStyle"
        app:errorTextAppearance="@style/errorStyle"
        >

        <AutoCompleteTextView

            android:id="@+id/camera_setting_rename_dailog_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/camera_setting_rename_input"

            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/homeText"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
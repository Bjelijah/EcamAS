<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 边框颜色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_highlight" />
            <corners android:radius="2.5dp"/>
        </shape>
    </item>

    <!-- 边框圆角 -->
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/home_bk_light" />
            <corners android:radius="2.5dp"/>
            <padding android:bottom="1.8dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1.8dp" />
        </shape>
    </item>


    <!-- 点击按钮效果 -->
    <item>
        <ripple android:color="@color/white">
            <item>
                <selector>
                    <item android:drawable="@color/home_bk_light"/>
                </selector>
            </item>
        </ripple>
    </item>


</layer-list>
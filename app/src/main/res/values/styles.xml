<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <!-- new ui -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/alpha_white</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>


    <!-- new ui -->

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="anim_window_no" parent="@android:style/Animation"/>


    <style name="MyAppThemeLogin" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/login_bk</item>
        <item name="colorPrimaryDark">@color/login_bk</item>
        <item name="android:windowAnimationStyle">@style/anim_window_no</item>
    </style>

    <style name="MyAppThemeRegister" parent="AppTheme.NoActionBar">
        <item name="android:colorPrimary">@color/register_bk</item>
        <item name="android:colorPrimaryDark">@color/register_bk_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/anim_window_no</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="MyAppThemeListenDevice" parent="MaterialDrawerTheme">
        <item name="android:colorPrimary">@color/home_bk</item>
        <item name="android:colorPrimaryDark">@color/home_bk_dark</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="MyAppThemeAp" parent="MaterialDrawerTheme">
        <item name="android:colorPrimary">@color/add_ap_bk</item>
        <item name="android:colorPrimaryDark">@color/add_ap_bk_dark</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="MyAppThemeServerAddress" parent="MaterialDrawerTheme">
        <item name="android:colorPrimary">@color/home_bk</item>
        <item name="android:colorPrimaryDark">@color/home_bk_dark</item>

    </style>

    <style name="MyAppThemeDeviceSetting" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
        <item name="colorAccent">@color/homeText</item>
    </style>




    <style name="MyAppThemeDeviceSetting.share">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
    </style>

    <style name="MyAppThemeCharts" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
        <item name="colorAccent">@color/homeText</item>
    </style>


    <style name="MyStyleCameraSetting">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">@dimen/camera_setting_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/camera_setting_margin_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">@dimen/camera_setting_padding</item>

    </style>

    <style name="MyStyleCameraSettingLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/camera_setting_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/camera_setting_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/camera_setting_margin_vertcail</item>
        <item name="android:layout_marginBottom">@dimen/camera_setting_margin_vertcail</item>
    </style>

    <style name="MyStyleCameraSettingSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/camera_setting_title_size</item>
        <item name="android:textColor">@color/homeText</item>
    </style>


    <style name="MyAppThemeAdd" parent="MaterialDrawerTheme.TranslucentStatus">

        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/home_accent</item>

        <item name="android:background">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/anim_window_no</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="MyappThemePlay" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
    </style>




    <style name="MyappThemeVideoList" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
        <item name="colorAccent">@color/home_accent</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
    </style>


    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <!--@style/MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus-->
    <!--<style name="MyAppThemeHome" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">-->
    <style name="MyAppThemeHome" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="colorPrimary">@color/home_bk</item>
        <item name="colorPrimaryDark">@color/home_bk_dark</item>
        <item name="colorAccent">@color/home_accent</item>

        <!--<item name="android:background">@color/material_drawer_dark_background</item>-->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text
        </item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <!--<item name="material_drawer_selected_text">#F1433C</item>-->
        <item name="material_drawer_selected_text">@color/homeText</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_dark_primary_text
        </item>
    </style>

    <style name="myWebTitle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">13sp</item>

    </style>

    <style name="MyAppThemeHome.BigImage" >
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="WidgetProgressBar" parent="android:Widget.ProgressBar">　　
        <item name="android:indeterminateDrawable">@drawable/progress_large_white</item>
        <item name="android:indeterminateDuration">600</item>
        <item name="android:minWidth">32dip</item>
        　　
        <item name="android:maxWidth">32dip</item>
        　　
        <item name="android:minHeight">32dip</item>
        　　
        <item name="android:maxHeight">32dip</item>
    </style>


    <style name="FloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="errorStyle" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">12sp</item>
    </style>

    <style name="setting_btn_small">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/homeText</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>